<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="appocorrencias.com.appocorrencias">

    <!-- Permissões normais -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Permissões Perigosas -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:label">
        <activity
            android:name=".Activitys.Login"
            android:label="AppOcorrencias"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activitys.Adm" />
        <activity android:name=".Activitys.Cliente" />
        <activity
            android:name=".Activitys.CadastrarUsuario"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.CadastrarOcorrencia"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activitys.ListarOcorrencias" />
        <activity
            android:name=".ListView.ItemFeedOcorrencias"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.BuscarOcorrencias"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activitys.BuscarUsuarios"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name=".Network.FCMFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".Network.FCMFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".ListView.ItemBuscaUsuario" />
        <activity android:name=".ExampleUnitTest$Notificacoes" />
    </application>

</manifest>