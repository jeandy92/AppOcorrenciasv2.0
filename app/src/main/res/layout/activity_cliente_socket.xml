<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cliente_socket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="appocorrencias.com.appocorrencias.Activitys.Cliente_Socket">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txvRetornoSocket"/>


    <Button
        android:text="Testar Conexão"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnConexao"
        android:onClick="testar_conexao_servidor"
        android:layout_below="@+id/txvTesteDeConexao"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Button
        android:text="Teste de Enviar Imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConexao"
        android:layout_alignParentStart="true"

        android:layout_marginTop="20dp"
        android:onClick="btnEnviarImagem"
        android:id="@+id/btnEnviarImagem" />

    <Button
        android:text="Teste de Cadastrar Usuário"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnEnviaImagemServidor"
        android:onClick="cadastrarUsuario"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
