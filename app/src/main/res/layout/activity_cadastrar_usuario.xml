<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appocorrencias.com.appocorrencias.Activitys.Cadastrar_Usuario">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDadosPessoais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Dados Pessoais"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:text="Nome Completo"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDadosPessoais"/>

            <EditText
                android:id="@+id/edtNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:allowUndo="false"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintLeft_toLeftOf="@+id/txtNome"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNome"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/txtCPF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtNome"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/edtNome"/>

            <EditText
                android:id="@+id/edtCPF"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_below="@+id/edtNome"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/txtCPF"
                app:layout_constraintRight_toLeftOf="@+id/limitador"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtCPF"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/txtTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtNome"
                app:layout_constraintLeft_toRightOf="@+id/limitador"
                android:layout_marginLeft="8dp"/>

            <EditText
                android:id="@+id/edtTelefone"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_below="@+id/edtSenha"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/txtTelefone"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtTelefone"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="@+id/edtNome"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/txtDataNasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="Nascimento"
                android:inputType="date"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/edtCPF"
                app:layout_constraintTop_toBottomOf="@+id/edtCPF" />

            <EditText
                android:id="@+id/edtDataNasc"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_below="@+id/edtTelefone"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintLeft_toLeftOf="@+id/txtDataNasc"
                app:layout_constraintRight_toRightOf="@+id/edtCPF"
                app:layout_constraintTop_toBottomOf="@+id/txtDataNasc"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp"
                android:text="EndereÃ§o"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtDataNasc"
                app:layout_constraintHorizontal_bias="0.501"/>

            <TextView
                android:id="@+id/txtCEP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="-45dp"
                android:text="CEP"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtEndereco"/>

            <EditText
                android:id="@+id/edtCep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtDataNasc"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number"
                android:selectAllOnFocus="false"
                app:layout_constraintLeft_toLeftOf="@+id/txtCEP"
                app:layout_constraintTop_toBottomOf="@+id/txtCEP"
                app:layout_constraintRight_toLeftOf="@+id/limitador"
                android:layout_marginRight="0dp"
                app:layout_constraintHorizontal_bias="0.0"/>

            <ImageButton
                android:id="@+id/imgbtnBuscar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="-30dp"
                android:onClick="evBuscarCep"
                app:layout_constraintLeft_toRightOf="@+id/edtCep"
                app:layout_constraintTop_toBottomOf="@+id/txtCEP"
                app:srcCompat="@android:drawable/ic_search_category_default" />

            <TextView
                android:id="@+id/txtRua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/edtCep"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtCep"/>

            <EditText
                android:id="@+id/edtRua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtCep"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                app:layout_constraintLeft_toLeftOf="@+id/txtRua"
                app:layout_constraintTop_toBottomOf="@+id/txtRua"
                app:layout_constraintRight_toLeftOf="@+id/edtNumero"
                android:layout_marginRight="64dp"/>

            <TextView
                android:id="@+id/txtNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtCep"
                app:layout_constraintLeft_toRightOf="@+id/CadastrarUsuario"
                android:layout_marginLeft="32dp" />

            <EditText
                android:id="@+id/edtNumero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/edtRua"
                android:layout_alignBottom="@+id/edtRua"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNumero"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtNumero"/>

            <TextView
                android:id="@+id/txtComplemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complemento"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtRua"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/edtRua"/>

            <EditText
                android:id="@+id/edtComplemento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtComplemento"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtComplemento"
                app:layout_constraintRight_toLeftOf="@+id/limitador"
                android:layout_marginRight="0dp"/>

            <TextView
                android:id="@+id/txtBairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="Bairro"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/limitador"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtRua"/>

            <EditText
                android:id="@+id/edtBairro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtRua"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                app:layout_constraintLeft_toLeftOf="@+id/txtBairro"
                app:layout_constraintRight_toRightOf="@+id/edtNumero"
                app:layout_constraintTop_toBottomOf="@+id/txtBairro"/>

            <TextView
                android:id="@+id/txtCidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtComplemento"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/edtComplemento"/>

            <EditText
                android:id="@+id/edtCidade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtBairro"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                app:layout_constraintLeft_toLeftOf="@+id/txtCidade"
                app:layout_constraintTop_toBottomOf="@+id/txtCidade"
                app:layout_constraintRight_toLeftOf="@+id/limitador"
                android:layout_marginRight="0dp"/>

            <TextView
                android:id="@+id/txtUF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UF"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtBairro"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/edtBairro"/>

            <EditText
                android:id="@+id/edtUF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtBairro"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                app:layout_constraintTop_toBottomOf="@+id/txtUF"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="@+id/txtBairro"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtUF"/>

            <TextView
                android:id="@+id/txtDadosAcesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="32dp"
                android:text="Dados de Acesso"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtCidade"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:text="Email"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDadosAcesso" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="324dp"
                android:layout_height="0dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtEmail"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtEmail" />

            <TextView
                android:id="@+id/txtSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/edtEmail"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edtEmail"/>

            <EditText
                android:id="@+id/edtSenha"
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:layout_below="@+id/edtCPF"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@+id/txtSenha"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtSenha" />

            <TextView
                android:id="@+id/txtConfirmarSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="Confirme a Senha"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@+id/limitador"
                app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

            <EditText
                android:id="@+id/edtConfirmarSenha"
                android:layout_width="144dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@+id/txtConfirmarSenha"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/txtConfirmarSenha" />

            <Button
                android:id="@+id/CadastrarUsuario"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:onClick="evCadastrarUsuario"
                android:text="Cadastrar"
                android:background="@drawable/botoes_arrendondados"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/limitador"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="@+id/limitador"
                app:layout_constraintHorizontal_bias="0.505"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/edtConfirmarSenha" />

            <TextView
                android:id="@+id/limitador"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="          "
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/CadastrarUsuario" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>