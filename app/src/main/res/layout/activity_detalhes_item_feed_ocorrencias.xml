<?xml version="1.0" encoding="utf-8"?>

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="13dp"
        android:layout_y="380dp"
        app:srcCompat="@drawable/ic_assalto" />

    <TextView
        android:id="@+id/edt_desc_ocorrencia"
        android:layout_width="307dp"
        android:textSize="15dp"
        android:layout_height="193dp"
        android:layout_weight="0.23"
        android:layout_x="20dp"
        android:layout_y="132dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_x="90dp"
        android:layout_y="331dp"
        android:text="IMAGENS DA OCORRENCIA" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="109dp"
        android:textColor="@color/colorPrimary"
        android:text="DESCRIÇÃO DA OCORRÊNCIA" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_x="266dp"
        android:layout_y="462dp"
        android:clickable="true"
        android:theme="@style/botaopadrao"
        app:fabSize="mini"
        android:src="@drawable/ic_question_answer" />

    <TextView
        android:id="@+id/legenda_comentarios"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="511dp"
        android:text="Adicionar comentário" />

    <TextView
        android:id="@+id/numeroocorrencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:textColor="@color/colorPrimary"
        android:layout_y="29dp"
        android:text="Numero Ocorrência" />

    <TextView
        android:id="@+id/edt_tipo_crime"
        android:layout_width="116dp"
        android:layout_height="26dp"
        android:textSize="15dp"
        android:layout_x="208dp"
        android:layout_y="51dp"
        android:editable="true"/>

    <TextView
        android:id="@+id/titulo_tipo_crime"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_x="208dp"
        android:layout_y="30dp"
        android:textColor="@color/colorPrimary"


        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tipo de Crime" />

    <TextView
        android:id="@+id/edt_id_ocorrencia"
        android:layout_width="95dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_x="27dp"
        android:layout_y="51dp"
        android:editable="true"
        android:ems="10"
        android:inputType="textPersonName" />
</AbsoluteLayout>
