<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_envia_imagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="appocorrencias.com.appocorrencias.EnviaImagem">

    <Button
        android:text="Tirar um foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TirarFoto"
        android:onClick="TirarFoto"
        android:background="@drawable/botoes_arrendondados"
        android:textColor="@color/texto_botao"
        android:layout_x="11dp"
        android:layout_y="74dp" />

    <Button
        android:text="Selecionar uma Imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEscolherImagem"
        android:background="@drawable/botoes_arrendondados"
        android:textColor="@color/texto_botao"
        android:layout_marginEnd="45dp"
        android:layout_x="15dp"
        android:layout_y="28dp" />

    <Button
        android:text="Salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:background="@drawable/botoes_arrendondados"
        android:textColor="@color/texto_botao"
        android:layout_x="-8dp"
        android:layout_y="422dp" />

    <ImageView
        android:id="@+id/ImagemPerfil"
        android:layout_width="319dp"
        android:layout_height="276dp"
        android:layout_x="30dp"
        android:layout_y="136dp"
        app:srcCompat="@mipmap/ic_launcher" />

</AbsoluteLayout>
