<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    style="@style/ocorrenciasregistradas">

    <ImageView
        android:id="@+id/imagem_ocorrencia"
        android:layout_width="80dp"
        android:layout_height="80dp" />

        <TextView
            android:id="@+id/id_ocorrencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imagem_ocorrencia" />

        <TextView
            android:id="@+id/desc_ocorrencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descriÃ§ao"
            android:textSize="20dp"
            android:layout_below="@+id/id_ocorrencia"
            android:layout_toEndOf="@+id/imagem_ocorrencia" />
    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/id_ocorrencia"
        android:layout_below="@+id/desc_ocorrencia"/>


    </RelativeLayout>


